# Application Settings
APP_NAME="Trainings Backoffice"
ENVIRONMENT=local

# Database Configuration
# For local development (SQLite):
DATABASE_URL=sqlite:///./trainings.db

# For production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/y-b_trainings_backoffice

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Authentication & Security
# IMPORTANT: Generate a secure secret key using:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_SECRET_KEY

# JWT Algorithm (do not change unless you know what you're doing)
ALGORITHM=HS256

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
# Comma-separated list of allowed origins
# For production, use your actual domain:
CORS_ORIGINS=https://yellow-boat.org,http://localhost:3000

# Email Settings (SMTP for sending)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@yellow-boat.org
SMTP_FROM_NAME=Yellow-Boat Academy
EMAIL_ENABLED=false

# Email Settings (IMAP for receiving)
IMAP_HOST=
IMAP_PORT=993
IMAP_USERNAME=
IMAP_PASSWORD=
IMAP_USE_SSL=true

# Platform Settings
PLATFORM_EMAIL_DOMAIN=yellow-boat.org
FRONTEND_BASE_URL=http://localhost:3000

# AlwaysData API Settings (for automatic email mailbox creation)
# Get your API key from: https://admin.alwaysdata.com/token/
ALWAYSDATA_API_KEY=
ALWAYSDATA_ACCOUNT=y-b
ALWAYSDATA_DOMAIN_ID=0
