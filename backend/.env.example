# Yellow-Boat Academy Backend Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite:///./trainings.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/dbname

# =============================================================================
# AUTHENTICATION
# =============================================================================
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# EMAIL SETTINGS (SMTP for sending)
# =============================================================================
EMAIL_ENABLED=true
SMTP_HOST=smtp-y-b.alwaysdata.net
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@yellow-boat.org
SMTP_FROM_NAME=Yellow-Boat Academy

# =============================================================================
# EMAIL SETTINGS (IMAP for receiving)
# =============================================================================
IMAP_HOST=imap-y-b.alwaysdata.net
IMAP_PORT=993
IMAP_USERNAME=your-imap-username
IMAP_PASSWORD=your-imap-password
IMAP_USE_SSL=true

# =============================================================================
# ALWAYSDATA API (for automatic email account creation)
# =============================================================================
ALWAYSDATA_API_KEY=your-api-key-here
ALWAYSDATA_ACCOUNT=y-b
ALWAYSDATA_DOMAIN_ID=121892

# =============================================================================
# PLATFORM SETTINGS
# =============================================================================
PLATFORM_EMAIL_DOMAIN=yellow-boat.org
FRONTEND_BASE_URL=https://yellow-boat.org

# =============================================================================
# CORS (comma-separated list of allowed origins)
# =============================================================================
CORS_ORIGINS=["https://yellow-boat.org", "http://localhost:3000"]
