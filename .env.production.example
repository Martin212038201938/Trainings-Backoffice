# Production Environment Configuration for AlwaysData
# Copy this file to .env and fill in the actual values

# Application Settings
APP_NAME="Trainings Backoffice"
ENVIRONMENT=production

# Database Configuration
# AlwaysData PostgreSQL Database
DATABASE_URL=postgresql://y-b_trainings_backoffice:YOUR_DB_PASSWORD@postgresql-y-b.alwaysdata.net/y-b_trainings_backoffice

# OpenAI API Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Authentication & Security
# CRITICAL: Generate a secure secret key using:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_SECRET_KEY_IN_PRODUCTION

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
# Production domain
CORS_ORIGINS=https://yellow-boat.org

# Email Settings (SMTP for sending) - AlwaysData
SMTP_HOST=smtp-y-b.alwaysdata.net
SMTP_PORT=587
SMTP_USERNAME=noreply@yellow-boat.org
SMTP_PASSWORD=YOUR_EMAIL_PASSWORD_HERE
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@yellow-boat.org
SMTP_FROM_NAME=Yellow-Boat Academy
EMAIL_ENABLED=true

# Email Settings (IMAP for receiving) - AlwaysData
IMAP_HOST=imap-y-b.alwaysdata.net
IMAP_PORT=993
IMAP_USERNAME=noreply@yellow-boat.org
IMAP_PASSWORD=YOUR_EMAIL_PASSWORD_HERE
IMAP_USE_SSL=true

# Platform Settings
PLATFORM_EMAIL_DOMAIN=yellow-boat.org
FRONTEND_BASE_URL=https://yellow-boat.org

# AlwaysData API Settings (for automatic email creation)
# Get your API key from: https://admin.alwaysdata.com/token/
ALWAYSDATA_API_KEY=YOUR_API_KEY_HERE
ALWAYSDATA_ACCOUNT=y-b
ALWAYSDATA_DOMAIN_ID=0

# Python Path
PYTHONPATH=/home/y-b/trainings-backoffice/backend

# Logging
LOG_LEVEL=INFO

# Gunicorn Workers (optional, defaults to CPU * 2 + 1)
# GUNICORN_WORKERS=4

# Gunicorn Logging Paths
GUNICORN_ACCESS_LOG=/home/y-b/trainings-backoffice/logs/access.log
GUNICORN_ERROR_LOG=/home/y-b/trainings-backoffice/logs/error.log
GUNICORN_LOG_LEVEL=info
