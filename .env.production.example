# Production Environment Configuration for AlwaysData
# Copy this file to .env and fill in the actual values

# Application Settings
APP_NAME="Trainings Backoffice"
ENVIRONMENT=production

# Database Configuration
# AlwaysData PostgreSQL Database
DATABASE_URL=postgresql://y-b_trainings_backoffice:YOUR_DB_PASSWORD@postgresql-y-b.alwaysdata.net/y-b_trainings_backoffice

# OpenAI API Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Authentication & Security
# CRITICAL: Generate a secure secret key using:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_SECRET_KEY_IN_PRODUCTION

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
# Production domain
CORS_ORIGINS=https://bo.yellow-plane.com

# Python Path
PYTHONPATH=/home/y-b/trainings-backoffice/backend

# Logging
LOG_LEVEL=INFO

# Gunicorn Workers (optional, defaults to CPU * 2 + 1)
# GUNICORN_WORKERS=4

# Gunicorn Logging Paths
GUNICORN_ACCESS_LOG=/home/y-b/trainings-backoffice/logs/access.log
GUNICORN_ERROR_LOG=/home/y-b/trainings-backoffice/logs/error.log
GUNICORN_LOG_LEVEL=info
